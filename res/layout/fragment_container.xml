    android:layout_height="match_parent"
    android:orientation="vertical" >
    <fragment android:name="com.ngapham.EnglishLearningKit.ArticleListFragment"

            android:id="@+id/list"

            android:layout_weight="1"

            android:layout_width="10dp"
            android:layout_height="match_parent" />

    <fragment android:name="com.ngapham.EnglishLearningKit.ArticleReaderFragment"

            android:id="@+id/viewer"

            android:layout_weight="2"

            android:layout_width="10dp"

            android:layout_height="match_parent" />

</LinearLayout>
